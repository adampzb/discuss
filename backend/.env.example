# DiscussIt Backend Configuration
# Copy this file to .env and modify values as needed

# ============================================
# Django Settings
# ============================================

# Environment: development, staging, production
DJANGO_ENV=development

# Secret key for Django (generate a new one for production!)
DJANGO_SECRET_KEY=django-insecure-development-key-for-dev-only

# Allowed hosts (comma-separated)
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================
# Database Settings
# ============================================

# PostgreSQL database configuration
DB_NAME=discussit
DB_USER=discussit
DB_PASSWORD=discussit
DB_HOST=localhost
DB_PORT=5432

# ============================================
# Redis Settings
# ============================================

# Redis configuration for caching and real-time features
REDIS_HOST=localhost
REDIS_PORT=6379

# ============================================
# CORS Settings
# ============================================

# Allowed origins for CORS (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ============================================
# Email Settings
# ============================================

# Email backend (console for development, smtp for production)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Default from email
DEFAULT_FROM_EMAIL=noreply@discussit.eu

# SMTP settings (uncomment and configure for production)
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-email-password

# ============================================
# Authentication Settings
# ============================================

# JWT Authentication (optional)
# JWT_SECRET_KEY=your-jwt-secret-key
# JWT_ALGORITHM=HS256
# JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
# JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# File Storage Settings
# ============================================

# Media files storage (local for development)
# For production, consider using S3 or similar
MEDIA_ROOT=./media
STATIC_ROOT=./staticfiles

# ============================================
# Logging Settings
# ============================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=DEBUG

# ============================================
# Celery Settings
# ============================================

# Celery broker URL (Redis by default)
CELERY_BROKER_URL=redis://localhost:6379/0

# Celery result backend
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================
# Security Settings
# ============================================

# Security settings (uncomment for production)
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True

# ============================================
# Feature Flags
# ============================================

# Enable/disable features (1 = enabled, 0 = disabled)
FEATURE_VOICE_CHAT=0
FEATURE_BROWSER_EXTENSIONS=0
FEATURE_ADVANCED_ANALYTICS=0

# ============================================
# Note: For production, always:
# 1. Generate a new SECRET_KEY
# 2. Use proper email backend
# 3. Configure proper security settings
# 4. Set up proper file storage
# 5. Configure proper logging
# ============================================
